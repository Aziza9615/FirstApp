<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/black_bgr"
        android:textColor="@color/gray_bgr"
        android:textSize="56sp"
        tools:text="10000"
        android:gravity="bottom|right" />

    <LinearLayout
        android:id="@+id/too"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_bgr"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_open_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="("
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_close_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text=")"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="%"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="ะะก"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="7"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="8"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="9"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="*"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="4"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="5"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="6"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="-"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="1"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="2"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="3"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="+"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="/"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text="0"
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_zapata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_bgr"
                android:text=","
                android:textColor="@color/white_bgr"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_eguals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="="
                android:textSize="24dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>