<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ваше значение"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/set_shared_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/from_shared_text_view"
        android:text="Значение из SHAREDPREFERENCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/get_shared_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить из ShardPreference"
        android:layout_marginTop="32dp"/>
</LinearLayout>